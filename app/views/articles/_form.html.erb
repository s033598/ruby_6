<%= form_with model: @article, local: true do |form| %> <!-- palei modeli article sukuriam forma -->
 
  <% if @article.errors.any? %> <!-- jeigu yra klaidu.. -->
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited <!-- error arba errors meta, priklausomai nuo klaidu kiekio. cool metodas. -->
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %> <!-- kiekviena klaidos zinute demonstruojam, delko neisejo sukurt straipsnio -->
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %><br> <!-- label Title -->
    <%= form.text_field :title %><!-- input -->
  </p>
 
  <p>
    <%= form.label :text %><br> <!-- label Text -->
    <%= form.text_area :text %> <!-- Textarea -->
  </p>
 
  <p>
    <%= form.submit %> <!-- mygtukas formos siuntimui -->
  </p>
 
<% end %>